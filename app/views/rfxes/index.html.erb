<p id="notice"><%= notice %></p>

<h1>询价单清单</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>序号</th>
      <th>开始时间</th>
      <th>结束时间</th>
      <th>采购分组</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @rfxes.each do |rfx| %>
      <tr>
        <td><%= rfx.SN %></td>
        <td><%= rfx.begin_dt %></td>
        <td><%= rfx.end_dt %></td>
        <td><%= rfx.sourcing_org.full_name %></td>
        <td><%= link_to '明细', rfx %></td>
        <td><%= link_to '修改', edit_rfx_path(rfx) %></td>
        <td><%= link_to '删除', rfx, method: :delete, data: { confirm: '确实要删除该询价信息吗?' } %></td>
        <td><%= link_to '行明细', rfx_rfx_items_path(rfx) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建询价单', new_rfx_path, class: "btn btn-default" %>
<%= link_to '上载询价单', "#", class: "btn btn-default" %>

