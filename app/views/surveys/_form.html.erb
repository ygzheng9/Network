<%= simple_form_for(@survey) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', f: builder %>
  <% end %>

  <%= link_to_add_fields "Add Question", f, :questions %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
